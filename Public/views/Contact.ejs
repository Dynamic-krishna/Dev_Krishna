<div class="mainsection">
    <h1>Feel Free To Contact Us</h1>
    <form action="/contac" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your Name" required><br>
        <label for="email">Email:</label>
        <input type="email" id="emailin" name="email" placeholder="Enter your Email" required><br>
        <label for="message">Message:</label><br>
        <textarea id="message" name="message" rows="4" placeholder="Enter your Message" required></textarea><br>
        <button type="submit" class="submit">Submit</button>
    </form>
</div>